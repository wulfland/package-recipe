{
  "name": "@wulfland/package-recipe",
  "version": "1.0.0",
  "description": "This is a package to demo releasing in GitHub.",
  "main": "index.js",
  "scripts": {
    "test": "(jest && make-coverage-badge)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wulfland/package-recipe.git"
  },
  "author": "Michael Kaufmann",
  "license": "MIT",
  "jest": {
    "verbose": true,
    "coverageReporters": [
      "json-summary",
      [
        "text",
        {
          "file": "coverage.txt",
          "path": "./coverage"
        }
      ],
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "bugs": {
    "url": "https://github.com/wulfland/package-recipe/issues"
  },
  "homepage": "https://github.com/wulfland/package-recipe#readme",
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0"
  }
}
